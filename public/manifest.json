{
  "manifest_version": 3,

  "name": "Portainer Checker",
  "description": "Portainer Checker",
  "version": "1.0",

  "icons": {
    "16": "globe-2.png",
    "128": "globe-1.png"
  },

  "action": {
    "default_popup": "index.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/script.js"]
      }
  ],

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}